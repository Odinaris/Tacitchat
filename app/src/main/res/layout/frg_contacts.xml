            <!--android:id="@+id/lv_letters"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentRight="true">-->
        <!--</cn.odinaris.tacitchat.view.LetterView>-->
    </RelativeLayout>
</LinearLayout>